{
  "brand": {
    "name": "Bluewaves",
    "slug": "bluewaves",
    "version": "1.0.0",
    "description": "Brand kit for Bluewaves documents and communications"
  },
  "fonts": {
    "heading":  { "regular": "fonts/heading.ttf", "bold": "fonts/heading-bold.ttf" },
    "body":     { "regular": "fonts/body.ttf", "italic": "fonts/body-italic.ttf", "bold": "fonts/body-bold.ttf", "bold_italic": "fonts/body-bold-italic.ttf" },
    "mono":     { "regular": "fonts/mono.ttf" }
  },
  "logos": {
    "full":     { "color": "logos/logo-full-color.svg", "white": "logos/logo-full-white.svg" },
    "mark":     { "color": "logos/logo-mark-color.svg", "white": "logos/logo-mark-white.svg" },
    "favicon":  "logos/favicon.png",
    "wordmark": "logos/wordmark.svg"
  },
  "templates": {
    "pdf": {
      "cover-front":     "templates/pdf/cover-front.pdf",
      "cover-back":      "templates/pdf/cover-back.pdf",
      "page-content":    "templates/pdf/page-content.pdf",
      "page-blank":      "templates/pdf/page-blank.pdf",
      "section-divider": "templates/pdf/section-divider.pdf",
      "color-primary":   "templates/pdf/color-primary.pdf",
      "color-accent":    "templates/pdf/color-accent.pdf",
      "zones":           "templates/pdf/zones.json"
    }
  },
  "patterns": [
    "patterns/pattern-01.svg",
    "patterns/divider-line.svg"
  ],
  "icons": {
    "set": "Phosphor",
    "weight": "regular",
    "source": "https://unpkg.com/@phosphor-icons/core@2.1.1/assets/regular",
    "local": "icons/phosphor"
  },
  "tokens": {
    "colors": {
      "text-heading": "#B78A66",
      "text-body": "#2C2C2C",
      "text-muted": "#7A7A7A",
      "text-inverse": "#FFFFFF",
      "background-page": "#FFFFFF",
      "background-alt": "#F5F5F7",
      "border-default": "#B0B0B0",
      "border-strong": "#4A4A4A",
      "link": "#00D2E0",
      "highlight": "#FF375F"
    },
    "type_scale": {
      "display-lg": { "size_pt": 72, "weight": "bold",  "font": "heading", "line_height": 1.0  },
      "display":  { "size_pt": 48, "weight": "bold",    "font": "heading", "line_height": 1.1  },
      "h1":       { "size_pt": 32, "weight": "bold",    "font": "heading", "line_height": 1.15 },
      "h2":       { "size_pt": 24, "weight": "bold",    "font": "heading", "line_height": 1.2  },
      "h3":       { "size_pt": 18, "weight": "bold",    "font": "heading", "line_height": 1.25 },
      "h4":       { "size_pt": 14, "weight": "bold",    "font": "heading", "line_height": 1.3  },
      "body":     { "size_pt": 11, "weight": "regular",  "font": "body",    "line_height": 1.5  },
      "body-sm":  { "size_pt": 9,  "weight": "regular",  "font": "body",    "line_height": 1.5  },
      "caption":  { "size_pt": 8,  "weight": "regular",  "font": "body",    "line_height": 1.4  },
      "overline": { "size_pt": 8,  "weight": "bold",    "font": "body",    "line_height": 1.4, "transform": "uppercase" },
      "code":     { "size_pt": 10, "weight": "regular",  "font": "mono",    "line_height": 1.5  }
    },
    "imagery": {
      "corner_radius_pt": 6,
      "style": "fashion-editorial",
      "color_treatment": "muted palette, Kodachrome film look",
      "subject_guidelines": [
        "Very professional curated photography",
        "Landscape or people, fashion editorial style",
        "Each photo could be a magazine cover",
        "People always incredibly beautiful",
        "Consistency in style across all images"
      ],
      "avoid": [
        "Oversaturated or neon colors",
        "Casual or amateur-looking shots",
        "Inconsistent visual tone within a document"
      ],
      "prompt_style": "editorial photography, desaturated Kodachrome palette, cinematic composition, magazine-cover quality, muted tones, film grain, emotionally evocative",
      "pdf_defaults": {
        "resolution": "2K",
        "output_format": "jpeg",
        "enable_web_search": true
      }
    },
    "chart": {
      "palette": {
        "categorical": ["#B78A66", "#00D2E0", "#FF375F", "#6B5DFF", "#30D158", "#FF9230", "#0091FF", "#DB34F2"],
        "sequential": ["#F2E6D9", "#E5CDB3", "#D8B48D", "#CB9B67", "#B78A66", "#926E52", "#6D533D"],
        "diverging": ["#FF375F", "#FF8A9E", "#FFCDD6", "#F5F5F7", "#B3E8EC", "#66D5DE", "#00D2E0"],
        "highlight": "#FF375F",
        "highlight_contrast": "#FFFFFF"
      },
      "axis": { "color": "#4A4A4A", "width": 0.8, "label_color": "#2C2C2C", "tick_color": "#7A7A7A" },
      "grid": { "color": "#B0B0B0", "alpha": 0.3, "width": 0.5, "style": "--" },
      "typography": {
        "title": { "style": "h3", "color_role": "text-heading" },
        "subtitle": { "style": "body", "color_role": "text-muted" },
        "axis_label": { "style": "body-sm", "color_role": "text-body" },
        "tick_label": { "style": "caption", "color_role": "text-body" },
        "annotation": { "style": "caption", "color_role": "text-muted" },
        "legend": { "style": "caption", "color_role": "text-body" }
      },
      "figure": { "background": "#FFFFFF", "plot_background": "#FFFFFF" }
    }
  },
  "defaults": {
    "language": "en",
    "date_format": "MMMM D, YYYY",
    "page_format": "A4"
  }
}
